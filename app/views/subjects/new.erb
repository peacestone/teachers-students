<h1>Add a subject</h1>

<form class="" action="/subjects" method="post">
  <p>
    Subject Name: <input type="text" name="name" value="">
  </p>
  <strong>Select Students:</strong><br>
  <%@students.each do |student| %>
    <input type="checkbox" name="student_ids[]" value="<%=student.id%>"><%=student.name%>
    <%end%>

<p>
  <strong>Missing a student?</strong><br>
  Add a student to this subject:<br><br>
  Student Name: <input type="text" name="student[name]" value=""><br>
  Date of Birth: <input type="date" name="student[dob]" value="">
</p>
<input type="submit" value="Add Subject">
</form>
